<!doctype html>
<html lang="en" {% if site.theme %} data-theme="{{ site.theme }}" {% endif %}>

{% include "head.njk" -%}

<body>{% include "header.njk" -%} <div class="page-grid">
        <main id="content">
            <header id="page-header" {% if kind %} data-kind="{{ kind }}" {% endif %}>
                {% if kind == "essay" %}
                <h1 id="page-title">{{ title or site.title }}</h1>
                {% else %}
                <h1 id="site-name">{{ site.name or site.title }}</h1>
                {% endif %}
                <div class="rule" aria-hidden="true"></div>
                <p id="meta">( {{ description or site.tagline }} )
                </p>
            </header>

            <article>
                {{ content | safe }}</article>

            {% include "footer.njk" -%}
        </main>
        {% include "aside.njk" -%}


    </div>
    <script src="/js/scripts.js"></script>
</body>

</html>